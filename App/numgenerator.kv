<Root>:

    random_label: random_label

    canvas.before:
        Color:
            rgba: 0.894, 0.898, 0.941, 1  # background color
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: 0.494, 0.498, 0.58, 1  # border color
        Line:
            width: 5
            rectangle: (self.x, self.y, self.width, self.height)

    BoxLayout:
        orientation: 'vertical'
        padding: 10  # Add padding to the layout
        spacing: 10  # Add spacing between widgets

        Label:
            text: "Conecte su celular a un ordenador"
            font_size: 30
            color: 0.122, 0.122, 0.141, 1  # text color
            halign: 'center'
            valign: 'middle'
            text_size: self.size

        Label:
            id: random_label
            text: 'Generating...'
            font_size: 48
            color: 0.122, 0.122, 0.141, 1  # text color
            halign: 'center'
            valign: 'middle'
            text_size: self.size
    